@model AddBookFormModel
@{
    ViewData["Title"] = "Add Book";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="add-book">Add Book Form</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Title">Book Title</label>
                    <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author">Author</label>
                    <input asp-for="Author" class="form-control">
                    <span asp-validation-for="Author" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher">Publisher</label>
                    <input asp-for="Publisher" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image Url</label>
                    <input asp-for="ImageUrl" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="The book is like new. It is a novel about..."></textarea>
                    <span asp-validation-for="Description" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>

