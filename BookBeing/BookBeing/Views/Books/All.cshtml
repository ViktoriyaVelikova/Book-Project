@model AllBooksQueryModel


<div class="row" id="search">
    <form method="get" class="form-inline" style="grid-gap:140px;">
        <div class="form-group" style="margin-left:15px;">
            <input asp-for="SearchTerms" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
        </div>
        <div class="form-group">
            <label asp-for="Category" style="margin-right:10px;"></label>
            <select asp-for="Category" class="form-control">
                <option value="">All</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Sorting" style="margin-right:10px;"></label>
            <select asp-for="Sorting" class="form-control">
                <option value="0" selected>Date created</option>
                <option value="1">Title</option>
                <option value="2">Author</option>
                <option value="3">Publisher</option>
                <option value="4">Price (low to high)</option>
                <option value="5">Price (high to low)</option>

            </select>
        </div>


    </form>
</div>

<div class="container" style="position:center">
    @foreach (var book in Model.Books)
    {
        <div class="card" style="width: 18rem; display:inline-block; height: 450px; overflow: hidden; margin:10px;">
            <img style="max-height:230px;" class="card-img-top" src="@book.ImageUrl" alt="@book.Title - @book.Author.Name">
            <div class="card-body">
                <h5 style="max-height:50px;overflow: hidden;" class="card-title">@book.Title - @book.Author.Name</h5>
                <p class="card-text">@book.Publisher.Name</p>
                <p class="card-text">Price: @book.Price</p>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>



