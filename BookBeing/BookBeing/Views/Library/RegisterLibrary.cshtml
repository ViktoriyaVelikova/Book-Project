@model AddLibraryFormModel
@{
    ViewData["Title"] = "Register Library";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="add-book">Register as Library</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="LibraryName"></label>
                    <input asp-for="LibraryName" class="form-control">
                    <span asp-validation-for="LibraryName" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control">
                    <span asp-validation-for="City" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode"></label>
                    <input asp-for="ZipCode" class="form-control">
                    <span asp-validation-for="ZipCode" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control">
                    <span asp-validation-for="Address" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control">
                    <span asp-validation-for="PhoneNumber" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="alert-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Add me as Library</button>
            </form>
        </div>
    </div>

</div>